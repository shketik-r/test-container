import Footer from "@sections/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <Head title={title} />
  <body>
    <!-- Sprites -->
    <Sprites />
    <!-- HEADER -->
    <Header />

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- FOOTER -->
    <Footer />

    <style is:global>
      :root {
      }

      html {
      }
    </style>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
    ></script>

   <script src="../scripts/app.js"></script>
  </body>
